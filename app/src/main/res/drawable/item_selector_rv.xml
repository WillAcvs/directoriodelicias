<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color when the row is selected -->
    <item android:drawable="@color/colorPrimary" android:state_pressed="false" android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/badge_radius_xlarge" />
                    <solid android:color="@color/colorPrimary" />
                    <stroke android:width="2dp"
                        android:color="@color/colorPrimaryDark"/>
                    <padding android:left="2dp"
                        android:top="2dp"
                        android:right="2dp"
                        android:bottom="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Standard background color -->
    <item android:drawable="@color/transparent" android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/badge_radius_xlarge" />
                    <solid android:color="@color/transparent" />

                </shape>
            </item>
        </layer-list>
    </item>
</selector>