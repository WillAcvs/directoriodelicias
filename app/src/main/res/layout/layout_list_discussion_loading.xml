<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_small"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/custom_bg"
        app:cardCornerRadius="@dimen/rounded_radius_small"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingTop="8dp"
            android:paddingEnd="10dp"
            android:paddingBottom="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/imageCV"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="@dimen/spacing_mlarge"
                app:cardElevation="@dimen/spacing_small">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/shimmer_loading_color" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:background="@drawable/rounded_layout_item"
                                    android:backgroundTint="@color/shimmer_loading_color"
                                    android:maxLines="1" />

                                <TextView
                                    android:id="@+id/date"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end|center_horizontal"
                                    android:background="@drawable/rounded_layout_item"
                                    android:backgroundTint="@color/shimmer_loading_color"
                                    android:gravity="end" />

                            </FrameLayout>


                        </LinearLayout>


                        <TextView
                            android:id="@+id/short_msg"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/rounded_layout_item"
                            android:backgroundTint="@color/shimmer_loading_color"
                            android:gravity="start"
                            android:maxWidth="200dp"
                            android:maxLines="1" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>