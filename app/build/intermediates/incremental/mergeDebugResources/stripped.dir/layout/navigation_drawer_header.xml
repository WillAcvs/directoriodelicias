<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:background="@color/colorPrimary">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:id="@+id/header_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/navigation_icon_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/user_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/profile_placeholder"
                app:siBorderColor="#eeeeee"
                app:siBorderWidth="3dp" />

            <TextView
                android:clickable="true"
                android:textSize="@dimen/title_size_large"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingStart="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                android:layout_marginTop="@dimen/spacing_large"
                android:text="Log In / Create Account"
                android:id="@+id/user_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:clickable="true"
                android:visibility="gone"
                android:textSize="@dimen/title_size_medium"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:paddingStart="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                android:text="Log In / Create Account"
                android:id="@+id/user_sub_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </FrameLayout>


</FrameLayout>