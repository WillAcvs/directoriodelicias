<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:fitsSystemWindows="false">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/lyt_parent"
        style="@style/RippleStyleWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/def_logo" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_bg_bottom_to_top_50"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_large"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingTop="@dimen/spacing_mxlarge"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large"
                android:paddingBottom="@dimen/spacing_large"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_large"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingTop="@dimen/spacing_mxlarge"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large"
                android:paddingBottom="@dimen/spacing_large">

                <TextView
                    android:fontFamily="@font/montserrat_bold"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suspendisse ornare est ac auctor pulvinar"
                    android:textSize="@dimen/title_size_xmedium"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/montserrat_italic"
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Backpacker"
                        android:textSize="@dimen/title_size_small"
                        android:textColor="@color/grey_10" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="@dimen/spacing_medium"
                android:gravity="center"
                android:orientation="horizontal" />

        </FrameLayout>


    </com.balysv.materialripple.MaterialRippleLayout>

</RelativeLayout>