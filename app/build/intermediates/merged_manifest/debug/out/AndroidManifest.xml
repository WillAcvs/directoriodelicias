                <data
                    android:host="@string/_DP_HOST_NAME"
                    android:pathPrefix="@string/DP_PATH_PREFIX_OFFER"
                    android:scheme="nsapp" />
                <data
                    android:host="@string/_DP_HOST_NAME"
                    android:pathPrefix="@string/DP_PATH_PREFIX_OFFER"
                    android:scheme="http" />
                <data
                    android:host="@string/_DP_HOST_NAME"
                    android:pathPrefix="@string/DP_PATH_PREFIX_OFFER"
                    android:scheme="https" />

                <!-- WITH INDEX -->
                <data
                    android:host="@string/_DP_HOST_NAME"
                    android:pathPrefix="@string/DP_PATH_PREFIX_OFFER_INDEX"
                    android:scheme="nsapp" />
